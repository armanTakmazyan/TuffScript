{
  "name": "tuff-js-transpiler",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "license": "MIT",
  "description": "Transpiler for converting TuffScript code to JavaScript",
  "author": "Arman Takmazyan",
  "sideEffects": false,
  "scripts": {
    "transpile-tuff-to-js": "node lib/transpileFile.js",
    "build": "yarn rimraf ./lib && tsc --declaration",
    "watch": "npx tsc -w",
    "start": "yarn run build:live",
    "build:live": "nodemon"
  },
  "dependencies": {
    "@babel/generator": "^7.23.5",
    "@babel/parser": "^7.23.5",
    "@babel/types": "^7.23.5",
    "tuffscript": "^1.0.0"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.6.7",
    "@types/node": "^20.8.10",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
}
