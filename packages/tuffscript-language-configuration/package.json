{
  "name": "tuffscript-language-configuration",
  "displayName": "TuffScript Language Configuration",
  "description": "Language Configuration for TuffScript",
  "version": "1.0.0",
  "publisher": "ArmanTakmazyan",
  "icon": "./images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/armanTakmazyan/TuffScript"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tuffscript", 
        "aliases": ["TuffScript", "tuffscript"],
        "extensions": [
          ".tuff" 
        ],
        "icon": {
          "dark": "./images/icon.png",
          "light": "./images/icon.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [{
      "language": "tuffscript",
      "scopeName": "source.tuffscript",
      "path": "./syntaxes/tuffscript.tmLanguage.json"
    }]
  }
}